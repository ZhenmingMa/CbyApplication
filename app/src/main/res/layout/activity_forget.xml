<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.uuun.cbyapplication.activity.ForgetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutTop"
        android:background="@color/themeColor">

        <ImageView
            android:id="@+id/forget_back"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/home_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="忘记密码"
            android:textColor="@color/lTextColor"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginTop="10dp"
        android:background="@color/lTextColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/activity_forget_phone_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机号"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/activity_forget_getcheckcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/reward_confirm"
                android:text="获取验证码"
                android:textColor="@color/lTextColor"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/lineColor"

            />

        <EditText
            android:id="@+id/activity_forget_identifit_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="13dp"
            android:background="@null"
            android:hint="验证码"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textSize="16sp"
            android:layout_marginLeft="9dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/lineColor"

            />

        <EditText
            android:id="@+id/activity_forget_password_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginLeft="9dp"
            android:paddingTop="13dp"
            android:background="@null"
            android:hint="新密码"
            android:textSize="16sp"
            android:singleLine="true"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_forget_submit_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="83dp"
        android:background="@drawable/reward_confirm"
        android:gravity="center_horizontal"
        android:paddingBottom="13dp"
        android:paddingTop="12dp"
        android:text="确 定"
        android:textColor="@color/lTextColor"
        android:textSize="16sp" />
</LinearLayout>
