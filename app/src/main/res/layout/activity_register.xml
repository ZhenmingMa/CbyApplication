<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.uuun.cbyapplication.activity.RegisterActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutTop"
        android:background="@color/themeColor">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="11dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="@string/login_noname"
            android:textColor="@color/lTextColor"
            android:textSize="18sp" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:background="@color/lTextColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/register_phone"
                        android:layout_width="0dp"
                        android:layout_height="51dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="手机号"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="number"
                        android:digits="1234567890"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/activity_regisiter_getCheckCode"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/reward_confirm"
                        android:gravity="center"

                        android:text="获取验证码"
                        android:textColor="@color/lTextColor"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/defaultTextColor"

                    />

                <EditText
                    android:id="@+id/register_identify"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="验证码"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/defaultTextColor"

                    />

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="密码"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/register_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/reward_confirm"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="注 册"
                    android:textColor="@color/lTextColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/register_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/register_register"
                    android:layout_below="@id/register_register"
                    android:text="已有账号,快速登录"
                    android:textColor="@color/themeColor"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="73dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:id="@+id/ll"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#636363"
                android:layout_marginTop="8dp"
                android:layout_marginRight="21dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="第三方登录"
                android:textColor="#636363"
                android:gravity="center"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#636363"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/login_weixin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

