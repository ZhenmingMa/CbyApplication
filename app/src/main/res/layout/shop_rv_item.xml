<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/shop_item_iv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="2dp"
        app:cardElevation="14px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:padding="5dp"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/shop_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="#5D5B5B" />
        <TextView
            android:id="@+id/shop_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F80B43"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/shop_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_item_name"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#636262" />
    </LinearLayout>
    <TextView
        android:id="@+id/shop_item_integrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="兑换"
        android:textSize="14sp"
        android:background="@drawable/rect_null2"
        android:textColor="#F80B43"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        />
</RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>