<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_write_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themeBackground"
    tools:context="com.example.uuun.cbyapplication.activity.WriteAddressActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutTop"
        android:background="@color/themeColor"
        >
        <ImageView
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:src="@mipmap/back"
            android:id="@+id/write_address_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="11dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_name"
            android:textColor="@color/lTextColor"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:id="@+id/write_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/lTextColor"
            android:textSize="@dimen/textSmallSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="6dp"
            />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lTextColor"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_name_people"
        android:textSize="13sp"
        android:textColor="#646464"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        />
    <EditText
        android:id="@+id/write_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:background="@null"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"
        android:textColor="#646464"
        />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lineColor"
            />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lTextColor"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/write_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_phone"
        android:textSize="13sp"
        android:textColor="#646464"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="9dp"
        android:inputType="phone"
        />
    <EditText
        android:id="@+id/write_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@null"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:textColor="#646464"
        android:inputType="phone"
        />
    </LinearLayout>
    <ImageView
        android:id="@+id/writeAddress_readPhone"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:src="@mipmap/address_phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"

        />
</RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lineColor"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地区"
                android:textSize="13sp"
                android:textColor="#646464"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                />
            <TextView
                android:id="@+id/write_address_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="#646464"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:src="@mipmap/next"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_alignParentRight="true"

                />
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@drawable/write_address_null"
            android:id="@+id/write_address_detail"
            android:textColor="#646464"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/lTextColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingTop="19dp"
                android:paddingBottom="18dp"
                android:textSize="13sp"
                android:textColor="#646464"
                />
            <ImageView
                android:layout_width="53dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:id="@+id/address_default_bt"
                android:src="@mipmap/address_switch"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/lTextColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除地址"
                android:textColor="#FF3939"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:textSize="13sp"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
